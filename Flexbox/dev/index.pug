<!DOCTYPE html>
html(lang="es")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title Flexbox atributos
		link(rel="stylesheet", href="css/main.css")
		script(src="js/mains.js")
	body
		h1 Propiedades de Flex
	
		-var list = ["row", "row-reverse", "column","column-reverse"]
		-var boxs = [1,2,3,4,5,6]
		-var flag = true;

		section.flexDemo
			.container
				.flexDemo-item
					.flex__menu
						.flex__menu--titulo
							h2 FLEX-DIRECTION
						each item in list
							.flex__menu--item
								label #{item}
								if flag
									input(type="radio", name="flex-direction" value="#{item}" checked)
									-flag = false;
								else
									input(type="radio", name="flex-direction" value="#{item}")
					.flex__vista
						each box in boxs
							.flex__vista-box #{box}

				.flexDemo-item
					.flex__menu
						.flex__menu--titulo
							h2 FLEX-DIRECTION
						each item in list
							.flex__menu--item
								label #{item}
